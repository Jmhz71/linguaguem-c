#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>


int main () {

setlocale(LC_ALL,"portuguese");

int p1,p2,p3;

int maior,menor;

printf("Digite o primeiro número:");
scanf("%d",&p1);

printf("Digite o segundo número:");
scanf("%d",&p2);

printf("Digite o terceiro número:");
scanf("%d",&p3);

maior = p1 > p2 ? p1 : p2;
maior = maior > p3 ? maior : p3;

menor = p1 < p2 ? p1 : p2;
menor = menor < p3 ? menor : p3;

printf("\nMaior número: %d \n",maior);
printf("\nMenor número: %d \n",menor);


return 0;



}
