#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>


int main () {

setlocale(LC_ALL,"portuguese");

int codigo;


printf ("------------------MENU--------------------\n");
printf ("\n");
printf ("1 | Picanha        \n   |R$ 25,00");
printf ("2 | Lasanha        \n   |R$ 20,00");
printf ("3 | strgonoff        \n |R$ 18,00");
printf ("4 | Bife acebolado    \n|R$ 55,00");
printf ("5 | pão com ovo      \n |R$  5,00");
printf ("\n");
printf ("----------------------FIM-------------------\n");
printf ("\n");
printf("Digite o código do prato:");
scanf ("%d",&codigo);

system("cls || clear"); 

switch (codigo){

    case 1 :
    printf ("codigo 1");
    break;

    case 2 :
    printf ("codigo 2");
    break;

    case 3 :
    printf ("codigo 3");
    break;

    case 4 :
    printf ("codigo 4");
    break;

    case 5:
    printf ("codigo 5");
    break;
}
    return 0;

}
